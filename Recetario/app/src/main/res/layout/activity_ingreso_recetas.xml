<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresoRecetas">

    <ImageButton
        android:id="@+id/imbRegresarV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/etIngredientes"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ingredientes"
        android:inputType="text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/etPreparacion"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Preparacion"
        android:inputType="text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="516dp" />

    <EditText
        android:id="@+id/etPorciones"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Porciones"
        android:inputType="text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="188dp" />

    <EditText
        android:id="@+id/etCalorias"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Calorias"
        android:inputType="text"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="188dp" />

    <EditText
        android:id="@+id/etCreacion"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="dd-mm-yyyy"
        android:inputType="date"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="271dp" />

    <RadioButton
        android:id="@+id/rbtSi"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Si"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="368dp" />

    <RadioButton
        android:id="@+id/brtNo"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="No"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es fÃ¡cil?"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="339dp" />

    <Button
        android:id="@+id/btnGuardarR"
        android:layout_width="146dp"
        android:layout_height="50dp"
        android:background="@color/yellow"
        android:text="Guardar Receta"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="611dp" />

</androidx.constraintlayout.widget.ConstraintLayout>